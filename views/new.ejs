<% include ./partial/header.ejs %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center">
		Add A New Appointment for <%=doc.name %>
		</h1>
		<div style="width:30%;margin:0 auto;">
			<form action="/hospitals/fortis/sexologist/<%=doc._id %>/appointments" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" name="appointment[patientname]" placeholder="PatientName">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="appointment[problem]" placeholder="Problem Of The Patent">
				</div>
				<div class="form-group">
					<input type="number" class="form-control" name="appointment[number]" placeholder="PhoneNumber">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-default btn-block">
						Submit
					</button>
				</div>
			</form>
			<a href="/hospitals/fortis/sexologist">
				GO BACK
			</a>
		</div>
	</div>
</div>
<% include ./partial/footer.ejs %>