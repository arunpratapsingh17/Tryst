<% include ./partial/header.ejs %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center">
		Update Appointment
		</h1>
		<div style="width:30%;margin:0 auto;">
			<form action="/<%=app._id %>/edit" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" name="appointment[patientname]" value="<%= app.patientname %>">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="appointment[problem]" value="<%= app.problem %>">
				</div>
				<div class="form-group">
					<input type="number" class="form-control" name="appointment[number]" value="<%= app.number %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-default btn-block">
						Submit
					</button>
				</div>
			</form>
			<a href="/hospitals/fortis/sexologist">
				GO BACK
			</a>
		</div>
	</div>
</div>
<% include ./partial/footer.ejs %>